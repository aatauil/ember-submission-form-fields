<AuLabel class="{{if this.errors "au-c-label--error"}}" for={{this.inputId}}>
  {{@field.label}}
  {{#if this.isRequired}}
    <AuPill>Verplicht</AuPill>
  {{/if}}
</AuLabel>
{{#each this.files as |file|}}
  <VoMuFileCard id="{{this.inputId}}" @file={{file}} @active={{false}}/>
{{/each}}

{{#unless this.files}}
  <AuHelpText>Er werden geen bestanden toegevoegd.</AuHelpText>
{{/unless}}
